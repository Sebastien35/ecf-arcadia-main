{% extends 'base.html.twig' %}

{% block body %}
    {% for services in service %}
    <div class="card mb-3 m-4">
        <div class="row g-0 rounded-4 cadre">
            <div class="row col-md-4 d-flex justify-content-center align-items-center">
                <h3>{{ services.name }}</h3>
                <p>{{ services.description }}</p>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    {% for image in services.image %}
                        <img class="img-fluid rounded-3" src="{{ asset('uploads/images/' ~ image) }}" alt="{{ services.name }}">
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
{% endblock body %}




